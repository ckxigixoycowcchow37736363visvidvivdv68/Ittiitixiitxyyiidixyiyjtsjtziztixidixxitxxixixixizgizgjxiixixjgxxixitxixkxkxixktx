            <div id="plane">
                <img src="plane.png" alt="Plane">
            </div>
        </div>

        <div id="buttonsContainer"></div>

        <p id="message">Press the right sequence to win!</p>
        <p id="record">First Prize: No record yet!</p>
        <button id="restart" onclick="restartGame()">Restart</button>
